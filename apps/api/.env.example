# ============================================
# Cermont FSM API - Environment Variables
# ============================================

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cermont_fsm

# JWT Configuration
# IMPORTANTE: Cambiar JWT_SECRET en producción. El servidor fallará si no está configurado.
JWT_SECRET=198669b3e6cd4ad24a0ccb41934733f6fe1786eee30ead591e1f1c58044744cd
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL (para CORS) - Debe coincidir con el dominio del frontend
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Email Configuration (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@cermont.com

# Push Notifications (opcional)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Sentry Error Tracking (opcional)
SENTRY_DSN=
