# ============================================
# Cermont FSM API - Environment Variables
# ============================================

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cermont_fsm

# JWT Configuration
# IMPORTANTE: Cambiar JWT_SECRET en producci칩n. El servidor fallar치 si no est치 configurado.
# Generar con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=cambiar_en_produccion
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing
BCRYPT_ROUNDS=12

# Frontend URL (para CORS) - Debe coincidir con el dominio del frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Rate Limiting - Protecci칩n contra ataques
THROTTLE_SHORT_LIMIT=20
THROTTLE_MEDIUM_LIMIT=100
THROTTLE_LONG_LIMIT=1000

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Email Configuration (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@cermont.com

# Push Notifications (opcional)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Sentry Error Tracking (opcional)
SENTRY_DSN=
