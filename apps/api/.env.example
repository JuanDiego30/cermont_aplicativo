# ============================================
# Cermont FSM API - Environment Variables Template
# ============================================
# Copy this file to .env and fill in the values.
# DO NOT commit .env to version control.

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=4000
HOST=localhost

# Database Configuration (PostgreSQL)
# IMPORTANT: Change password and database name for your local setup
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/cermont_fsm

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_32_CHARS_MIN
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing
BCRYPT_ROUNDS=12

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:4200
CORS_ORIGIN=http://localhost:4200

# Rate Limiting
THROTTLE_SHORT_LIMIT=20
THROTTLE_MEDIUM_LIMIT=100
THROTTLE_LONG_LIMIT=1000

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Cache Configuration
CACHE_TTL=300000
CACHE_MAX=100

# Security Headers
SECURITY_CSP_ENABLED=true
SECURITY_HSTS_ENABLED=true

# Request ID Header
REQUEST_ID_HEADER=x-request-id

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_MEMORY_THRESHOLD=300

# Seed Configuration (opcional - para scripts de seed)
SEED_ADMIN_PASSWORD=your-admin-password-here
SEED_TEST_PASSWORD=your-test-password-here
