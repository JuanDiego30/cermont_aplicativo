{
  "name": "@cermont/api",
  "version": "1.0.0",
  "description": "Cermont Backend API - NestJS",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint \"{src,test}/**/*.ts\" --max-warnings=9999",
    "lint:fix": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint \"{src,test}/**/*.ts\" --fix --max-warnings=9999",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "node ./scripts/jest-wrapper.cjs --config ./jest.config.ts",
    "test:watch": "jest --config ./jest.config.ts --watch",
    "test:cov": "node ./scripts/jest-wrapper.cjs --config ./jest.config.ts --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "openapi:export": "ts-node scripts/export-openapi.ts",
    "check": "pnpm run lint && pnpm run typecheck && pnpm run test"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/cache-manager": "^3.1.0",
