    "express": "^4.21.2",
    "file-type": "^21.2.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "mime-types": "^2.1.35",
    "nodemailer": "^7.0.12",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pdf-parse": "^2.4.5",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "pino": "^9.6.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^5.22.0",
