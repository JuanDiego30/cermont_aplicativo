{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "cermont-backend",
  "version": "1.0.0",
  "description": "Backend API REST para CERMONT ATG - Sistema de Gestión de Órdenes de Trabajo con Socket.IO",
  "type": "module",
  "main": "dist/server.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.5.0"
  },
  "scripts": {
    "clean": "rimraf dist coverage node_modules/.cache",
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "start": "NODE_ENV=production node dist/server.js",
    "dev": "nodemon --exec tsx src/server.ts",
    "dev:https": "npm run generate-cert && cross-env SSL_ENABLED=true tsx src/server.ts",
    "seed": "tsx scripts/seed.ts",
    "create-root": "tsx scripts/createRootUser.ts",
    "generate-cert": "tsx scripts/generateDevCert.ts",
    "check-ssl": "tsx scripts/checkSSL.ts",
    "generate-jwks": "tsx scripts/generateJWKS.ts",
    "rotate-jwt": "tsx scripts/rotateJWTSecret.ts",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run test",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --forceExit",
    "test:security": "cross-env NODE_ENV=test jest src/tests/security.test.ts --forceExit",
    "test:audit": "cross-env NODE_ENV=test jest src/tests/audit-and-blacklist.test.ts --forceExit",
    "test:integration": "cross-env NODE_ENV=test jest src/tests/integration --forceExit",
    "audit:stability": "tsx scripts/auditStability.ts",
    "audit:security": "tsx scripts/validateSecurity.ts",
    "audit:endpoints": "tsx scripts/validateEndpoints.ts",
    "audit:all": "npm run audit:stability && npm run audit:security && npm run audit:endpoints",
    "prepare": "husky install",
    "docker:build": "docker build -t cermont-backend .",
    "docker:run": "docker run -p 4100:4100 --env-file .env cermont-backend"
  },
  "keywords": [
    "express",
    "typescript",
    "api",
    "rest",
    "mongodb",
    "mongoose",
    "jwt",
    "socket.io",
    "nodejs",
    "cermont",
    "backend",
    "enterprise"
  ],
  "author": "CERMONT Tech Team <tech@cermont.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cermont/atg-backend"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "archiver": "^7.0.1",
    "argon2": "^0.41.1",
    "compression": "^1.7.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-stringify": "^6.6.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "express": "^4.21.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.4.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jose": "^5.10.0",
    "mongoose": "^8.7.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.7",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.10",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.3",
    "rate-limit-redis": "^4.2.0",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.0",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "validator": "^13.15.20",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.5.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.5.5",
    "@types/nodemailer": "^6.4.15",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.2",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "commitlint": "^19.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.1.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "rimraf": "^6.1.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.6.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
