{
  "git": {
    "commitMessage": "chore(release): release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "requireBranch": "main"
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": ["pnpm test", "pnpm build"],
    "after:bump": "pnpm generate:changelog",
    "after:release": "echo âœ… Release ${version} publicado exitosamente"
  }
}
