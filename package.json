{
  "name": "cermont-app",
  "version": "1.0.0",
  "description": "Cermont - Sistema de Gestión de Órdenes de Trabajo",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "install:all": "npm install && cd apps/api && npm install && cd ../web && npm install",
    "build": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/build-all.ps1",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "setup": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/setup.ps1",
    "diagnose": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/diagnose.ps1",
    "report": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/generate-report.ps1",
    "fix:deps": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/fix-dependencies.ps1",
    "fix:types": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/fix-multer-types.ps1",
    "validate": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/validate-typescript.ps1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}