{
  "name": "cermont-atg",
  "version": "1.0.0",
  "description": "Sistema integral de gestión de órdenes de trabajo ATG - Cermont",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"BACKEND,FRONTEND\" --prefix \"[{name}]\" --kill-others-on-exit",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm run build -w backend",
    "build:frontend": "npm run build -w frontend",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\" --names \"BACKEND,FRONTEND\" --prefix \"[{name}]\" --kill-others-on-exit",
    "start:backend": "npm run start -w backend",
    "start:frontend": "npm run start -w frontend",
    "test": "npm run test -w backend",
    "test:watch": "npm run test:watch -w backend",
    "lint": "npm run lint -w backend && npm run lint -w frontend",
    "type-check": "npm run type-check -w backend",
    "format": "npm run format -w backend && npm run format -w frontend",
    "clean": "npm run clean -w backend && npm run clean -w frontend && rm -rf node_modules",
    "setup": "npm install && npm run db:seed",
    "db:seed": "npm run db:seed -w backend",
    "db:reset": "npm run db:reset -w backend",
    "postinstall": "npm run postinstall -w backend"
  },
  "keywords": [
    "atg",
    "cermont",
    "ordenes-trabajo",
    "mantenimiento",
    "express",
    "next.js",
    "typescript"
  ],
  "author": "Cermont SAS",
  "license": "UNLICENSED",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
