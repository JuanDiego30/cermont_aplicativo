{
    "name": "cermont-monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "test": "turbo run test",
        "lint": "turbo run lint",
        "fix:tailwind": "pnpm --filter @cermont/web exec tailwindcss -i ./src/styles.css -o ./dist/styles.css",
        "clean": "rimraf dist .angular apps/*/dist apps/*/.angular"
    },
    "devDependencies": {
        "turbo": "latest"
    },
    "packageManager": "pnpm@9.1.0",
    "engines": {
        "node": ">=20.0.0"
    }
}