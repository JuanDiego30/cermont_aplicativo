{
  "name": "cermont_aplicativo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
  "prepare": "simple-git-hooks",
  "postinstall": "patch-package",
    "backend:dev": "tsx --tsconfig src/api/tsconfig.json src/api/server.ts",
    "backend:start": "node src/api/dist/server.js",
    "backend:build": "tsc -p src/api/tsconfig.json",
    "backend:test": "tsx --test src/api/tests/**/*.test.ts",
    "test": "npm run backend:test",
    "test:e2e": "playwright test",
    "dev:all": "concurrently \"npm run dev\" \"npm run backend:dev\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@mantine/core": "^8.3.5",
    "@mantine/form": "^8.3.5",
    "@mantine/hooks": "^8.3.5",
    "@mantine/modals": "^8.3.5",
    "@mantine/notifications": "^8.3.5",
    "@material/web": "^2.4.0",
    "@tabler/icons-react": "^3.35.0",
    "@types/animejs": "^3.1.13",
    "animejs": "^4.2.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.546.0",
    "multer": "^2.0.2",
    "next": "15.5.6",
    "pg": "^8.13.1",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.65.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@express-rate-limit/tsconfig": "^1.0.2",
    "@playwright/test": "^1.48.2",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^20",
    "@types/pg": "^8.10.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^2.0.16",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.6",
    "lint-staged": "^15.2.10",
    "patch-package": "^8.0.1",
    "simple-git-hooks": "^2.9.0",
    "supertest": "^7.1.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": "eslint --max-warnings=0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
