{
  "name": "cermont-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rimraf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md,yaml,yml,html,css,scss}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md,yaml,yml,html,css,scss}\"",
    "audit": "turbo run lint && jscpd",
    "audit:local": "pnpm run audit && node scripts/audit/check-api-consistency.js && pnpm audit --prod",
    "audit:report": "node scripts/generate-audit-report.mjs",
    "audit:full": "pnpm run audit:local && pnpm run audit:report",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    "release": "release-it",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "prepare": "husky"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^21.0.3",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@faker-js/faker": "^10.2.0",
    "@playwright/test": "^1.57.0",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.8.0",
    "prisma": "^7.2.0",
    "release-it": "^19.2.3",
    "rimraf": "^6.0.0",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.3.0",
    "zod": "^3.23.8"
  },
  "pnpm": {
    "overrides": {
      "diff": ">=8.0.3",
      "tmp": ">=0.2.4",
      "esbuild@<=0.24.2": ">=0.25.0",
      "@angular/common@<19.2.16": ">=19.2.16"
    }
  }
}
