{
  "name": "cermont-backend",
  "version": "1.0.0",
  "description": "Backend ATG Cermont - Sistema de gestión de órdenes de trabajo",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "author": "Cermont SAS",
  "keywords": [
    "backend",
    "express",
    "typescript",
    "prisma",
    "sqlite",
    "jwt",
    "rest-api",
    "order-management"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "preflight": "tsx scripts/preflight.ts",
    "dev": "npm run preflight && tsx watch src/server.ts",
    "dev:raw": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom='src/**/*.ts'",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "db:seed": "tsx scripts/seed.ts",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "jwks:generate": "tsx scripts/generateJWKS.ts",
    "clean:migration": "tsx scripts/clean-migration.ts",
    "clean": "rm -rf dist node_modules",
    "postinstall": "npm run prisma:generate && npm run jwks:generate"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/archiver": "^7.0.0",
    "archiver": "^7.0.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jose": "^5.10.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.10",
    "prom-client": "^15.1.0",
    "puppeteer": "^24.30.0",
    "sharp": "^0.34.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.19.1",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.19.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
