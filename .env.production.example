# ============================================
# Cermont FSM - Production Environment
# ============================================
# Copiar a .env.production y configurar valores reales

# Database
POSTGRES_USER=cermont
POSTGRES_PASSWORD=CAMBIAR_PASSWORD_SEGURO
POSTGRES_DB=cermont_fsm
DATABASE_URL=postgresql://cermont:CAMBIAR_PASSWORD_SEGURO@postgres:5432/cermont_fsm

# Redis
REDIS_URL=redis://redis:6379

# API Configuration
NODE_ENV=production
PORT=3001
JWT_SECRET=GENERAR_SECRET_SEGURO_DE_64_CARACTERES
JWT_EXPIRES_IN=7d
CORS_ORIGIN=https://tudominio.com

# Web Configuration
NEXT_PUBLIC_API_URL=https://api.tudominio.com
NEXT_PUBLIC_APP_NAME=Cermont FSM

# SSL (para Nginx)
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/fullchain.pem
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Dominio
DOMAIN=tudominio.com
