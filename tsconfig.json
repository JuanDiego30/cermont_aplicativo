{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "./backend/dist",
    "baseUrl": "./backend/src",
    "types": ["node"],
    "paths": {
      "@backend/*": ["./*"],
      "@backend/app/*": ["./app/*"],
      "@backend/domain/*": ["./domain/*"],
      "@backend/infra/*": ["./infra/*"],
      "@domain/*": ["./domain/*"],
      "@infra/*": ["./infra/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "backend/src/**/*.ts",
    "backend/scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "backend/dist",
    "frontend_backup",
    "backend/src/__tests__"
  ]
}
