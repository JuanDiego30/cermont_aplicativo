# ===========================================
# CERMONT - Variables de Entorno para VPS
# ===========================================
# Copia este archivo como .env y configura los valores

# ----- BASE DE DATOS -----
DB_NAME=cermont
DB_USER=cermont_user
# IMPORTANTE: Cambia esta contraseña por una segura
DB_PASSWORD=tu_contraseña_segura_aqui

# ----- JWT SECRETS -----
# IMPORTANTE: Genera claves únicas de al menos 32 caracteres
# Puedes usar: openssl rand -hex 32
JWT_SECRET=genera_una_clave_secreta_de_al_menos_32_caracteres
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=genera_otra_clave_secreta_diferente_para_refresh
JWT_REFRESH_EXPIRY=7d

# ----- URLs -----
# Cambia por la IP de tu VPS o tu dominio
FRONTEND_URL=https://tu-ip-o-dominio.com

# ----- LOGGING -----
# Opciones: debug, info, warn, error
LOG_LEVEL=info

# ----- NODE -----
NODE_ENV=production
