# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cermont
DB_USER=postgres
DB_PASSWORD=postgres_secure_password_change_in_production
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# JWT Configuration
JWT_SECRET=your_super_secret_key_change_this_in_production
JWT_EXPIRY=24h

# API Configuration
API_PORT=3000
API_URL=http://localhost:3000/api
NODE_ENV=development

# Frontend Configuration
WEB_PORT=4200
WEB_URL=http://localhost:4200

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@cermont.com

# AWS Configuration (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=cermont-uploads

# Redis Configuration (Optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Monitoring & Observability
SENTRY_DSN=https://your_sentry_key@sentry.io/project_id
NEW_RELIC_LICENSE_KEY=your_new_relic_license

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=session_secret_change_in_production

# Feature Flags
ENABLE_2FA=true
ENABLE_OAUTH=false
ENABLE_AUDIT_LOG=true
